<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="create-blog-details-table" author="ILAN (Generated)">

        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="BLOG_DETAILS"/>
            </not>
        </preConditions>

        <createTable tableName="BLOG_DETAILS" schemaName="BLOG_SCHEMA">
            <column name="ID" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(255)"/>
            <column name="category" type="VARCHAR(255)"/>
            <column name="content" type="CLOB"/>
            <column name="author_name" type="VARCHAR(255)"/>
            <column name="created_at" type="TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP"/>
            <column name="is_published" type="BOOLEAN"/>
            <column name="views_count" type="INT"/>
            <column name="tags" type="VARCHAR(500)"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
